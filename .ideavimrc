set incsearch
set hlsearch
set ignorecase smartcase
set scrolloff=5

set showcmd     "show incomplete cmds down the bottom
set showmode
set relativenumber

set expandtab
set autoindent

set commentary
set surround
set textobj-entire
set ReplaceWithRegister

set scrolloff=3
set sidescrolloff=7
set sidescroll=1"
set idearefactormode=keep

set system clipboard
